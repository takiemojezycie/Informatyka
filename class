#include <iostream>
#include <cstring>

using namespace std;

class gadaj
{
    int licz;
    char tekst[40];
    
    public:
    gadaj(int k, char *opis); //konstruktor
    ~gadaj(void); //destruktor
    
    int zwracaj(void)
    {
        return licz;
    }
    
    void schowaj(int x)
    {
        licz = x;
    }
    
    void coto()
    {
        cout << tekst << " ma wartość: " << licz << endl;
    }
};

gadaj::gadaj(int k, char *opis)
{
    strcpy(tekst, opis);
    licz = k;
    cout << "konstrukcja obiektu: " << tekst << endl;
}

gadaj::~gadaj(void)
{
    cout << "Pracuje destruktor: " << tekst << endl;
}

// obietky globalne
gadaj a(1, "obiekt  A (globalny)");
gadaj b(2, "obiekt B (globalny)");

int main()
{
    a.coto();
    b.coto();
    {
        cout << "zakres lokalny !!!" << endl;
        gadaj c(30, "obiekt c lokalny");
        gadaj d(40, "obiekd d lokalny");
        
        cout << "Funkcja coto " << endl;
        a.coto();
        b.coto();
        c.coto();
        
        cout << "Wartość globalna a: " << endl;
        ::a.coto(); //odwolanie się do wartości globalnej
    }
    
    a.coto();
    b.coto();

    return 0;
}
